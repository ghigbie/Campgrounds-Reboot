<% include partials/header %>

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to Campgrounds Page!</h1>
        <p>View our handpicked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
        </p>
    </div>
</header>

<div class="row container">
    <div class="col-lag-12">
        <h3>Our most popular Campgrounds!</h3>
    </div> 
</div>

<div class="row" style="display:flex; flex-wrap: wrap">
    <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image%>">
                    <div class="caption text-center">
                    <h4><%= campground.name%></h4>
                    </div>
                </div>
            </div>
    <% });%>
</div>

<% include partials/footer %>  